<inherit class="interactivedraw" />
<inlet name="command" type="Changeable" description="command for canvas to execute" />
<inherited-state name="drawInfo" type="TkDrawingInfo" default="none" />
<inherited-state name="widget" type="string" default="none" description="Tk Widget Name" />
<xblock name="drawCodeTcl">canvas &#36;drawingSpace.c
pack &#36;drawingSpace.c -fill both -expand yes</xblock>
<xblock name="drawCodeCpp"></xblock>
<xblock name="Announcement"></xblock>
<xblock name="TclDialog"></xblock>
<xblock name="Constructor"></xblock>
<xblock name="PreConstructor"></xblock>
<xblock name="Destructor"></xblock>
<xblock name="Private">
Semaphore xsemaphore;</xblock>
<xblock name="Initialize"></xblock>
<xblock name="Global">extern "C" void _oswexport oswTclEvalString (const char *toEval);</xblock>
<xblock name="TclStartup"></xblock>
<activation name="execute" activators="" order="" >

xsemaphore.Acquire();
ostringstream os;
os &lt;&lt; widget &lt;&lt; ".c " &lt;&lt; *command &lt;&lt; endl;
oswTclEvalString(os.str().c_str());
xsemaphore.Release();
</activation>
